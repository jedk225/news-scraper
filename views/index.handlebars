<div class="jumbotron text-center">
    <div class="jumbo-text">
        <h1>Rams Scraper</h1>
        <h3>Scraping the Official Website of the LA Rams</h3>
    </div>
</div>

<div class="container" id="wrapper">
    <h1 class="text-center">Articles</h1>
    <hr class="small">
    <div id="articles">
        {{#each articles}}
        <div class="article-header">
            <h2>{{this.title}}</h2>
            <a class="btn btn-danger btn-sm" href="#" role="button" data-id="{{this._id}}">SAVE ARTICLE</a>
            <div class="article-info">
                <p class="article-summary">{{this.summary}}</p>
                <p class="article-link">{{this.link}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>